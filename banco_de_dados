Banco de dados - SQLITE:
CREATE DATABASE fcm_cestas; 

CREATE TABLE tb_grupos (
    id    			INTEGER   PRIMARY KEY AUTOINCREMENT,
    nome  		TEXT (20) NOT NULL ON CONFLICT ROLLBACK UNIQUE ON CONFLICT ROLLBACK,
    sigla 			TEXT (1)  NOT NULL ON CONFLICT ROLLBACK UNIQUE ON CONFLICT ROLLBACK
);

CREATE TABLE tb_colaboradores (
    id       			INTEGER PRIMARY KEY AUTOINCREMENT,
    nome     		TEXT (60) NOT NULL ON CONFLICT ROLLBACK,
    email    		TEXT (60) UNIQUE ON CONFLICT ROLLBACK NOT NULL ON CONFLICT ROLLBACK,
    senha    		TEXT (20) NOT NULL ON CONFLICT ROLLBACK,
    id_grupo 		INTEGER NOT NULL ON CONFLICT ROLLBACK REFERENCES tb_grupos (id) ON DELETE CASCADE
);

CREATE TABLE tb_produtos (
    id        			TEXT (20) PRIMARY KEY ON CONFLICT ROLLBACK UNIQUE ON CONFLICT ROLLBACK NOT NULL ON CONFLICT ROLLBACK,
    nome      		TEXT (30) NOT NULL ON CONFLICT ROLLBACK,
    descricao 		TEXT (256) NOT NULL ON CONFLICT ROLLBACK,
    custo     		REAL DEFAULT (0),
    valor     		REAL DEFAULT (0) 
);

CREATE TABLE tb_cestas (
    id 			INTEGER PRIMARY KEY AUTOINCREMENT,
    nome			TEXT (30) NOT NULL ON CONFLICT ROLLBACK,
    descricao		TEXT (256) NOT NULL ON CONFLICT ROLLBACK,
    custo 			REAL NOT NULL DEFAULT (0),
    valor     		REAL NOT NULL DEFAULT (0) 
);

CREATE TABLE tb_itens_cestas (
    id         		INTEGER PRIMARY KEY AUTOINCREMENT,
    quantidade 	INTEGER NOT NULL ON CONFLICT ROLLBACK AS (1),
    id_cesta   		INTEGER REFERENCES tb_cestas (id) ON DELETE CASCADE,
    id_produto 	INTEGER REFERENCES tb_produtos (id) ON DELETE CASCADE
);